#jdbc.password={{ bitbucket_database_pass }}

{% if gravatar_enabled == true %}
# These lines work with the Confluence Gravitar Plugin, for providing Avatars across all Atlassian products
# If you do not wish to use this plugin in Confluence, then please remove these lines.
avatar.url.format.http={{ url_confluence }}/rest/cas/1.0/avatar/server/%1$s
avatar.url.format.https={{ url_confluence }}/rest/cas/1.0/avatar/server/%1$s
{% endif %}

{% if crowd_sso_enabled == true %}
# Whether SSO support should be enabled or not. Regardless of this setting SSO authentication
# will only be activated when a Crowd directory is configured in Bitbucket that is configured
# for SSO.
plugin.auth-crowd.sso.enabled=true
{% endif %}
